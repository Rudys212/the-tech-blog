<div class="card text-white bg-dark mb-3 w-75 p-3">
    <div class="card-header">{{{user.username}}}'s post</div>
    <h5 class="card-title">{{title}}</h5>
    <div class="card-body">

        <p class="card-text">{{post_body}}</p>
        <div class="card-footer text-muted">
            <p>Posted by {{user.username}} on {{format_date date_created}}</p>
        </div>
    </div>
</div>